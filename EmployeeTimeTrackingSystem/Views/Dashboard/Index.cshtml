@model EmployeeTimeTrackingSystem.Models.DashboardCardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string now = DateTime.Now.ToString("dddd, MMMM dd, yyyy – h:mm tt");
}

<link rel="stylesheet" href="~/Content/Styles/DashboardStyle.css" />

<div class="dashboard-header">
    <div class="header-left">
        <h2>Dashboard</h2>
        <div class="welcome">Welcome back, @(Session["RealName"] ?? "Guest")! Here's what's happening today.</div>
    </div>
    <div class="date">@now</div>
</div>

@Html.Partial("_Cards", Model)
