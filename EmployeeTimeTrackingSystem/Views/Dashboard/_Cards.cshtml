@model EmployeeTimeTrackingSystem.Models.DashboardCardViewModel

<link rel="stylesheet" href="~/Content/Styles/DashboardStyle.css" />

<div class="cards-row">
    <div class="card-box">
        <div class="card-title">Total Employees</div>
        <div class="card-value">@Model.TotalEmployees</div>
    </div>
    <div class="card-box">
        <div class="card-title">Present Today</div>
        <div class="card-value">@Model.PresentToday</div>
    </div>
    <div class="card-box">
        <div class="card-title">Late Today</div>
        <div class="card-value">@Model.LateToday</div>
    </div>
    <div class="card-box">
        <div class="card-title">Absent Today</div>
        <div class="card-value">@Model.AbsentToday</div>
    </div>
</div>
