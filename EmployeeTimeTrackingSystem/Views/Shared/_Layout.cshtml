<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Styles/NavbarStyle.css" />
    <link rel="stylesheet" href="~/Content/Styles/SidebarStyle.css" />

</head>
<body>
    <div class="custom-navbar">
        <a href="@Url.Action("Index", "Home")" class="brand">ETTS</a>
        <span>Employee Time Tracking System</span>
    </div>

    <div id="sidebar" class="sidebar">
        <button id="sidebarToggle" aria-label="Hide" title="Hide" type="button">
        </button>


        <div class="sidebar-profile text-center mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="profile-img" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
            </svg>

            <div class="profile-info">
                <div class="profile-name fw-bold">
                    @(Session["RealName"] ?? "Guest")
                </div>
                <div class="profile-role text-muted" style="font-size: 0.9em;">
                    @(Session["RoleName"] ?? "No Role")
                </div>
            </div>
        </div>


        <div class="sidebar-links">

            <!-- Dashboard -->
            <a id="iconDashboard" href="@Url.Action("Index", "Dashboard")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- Time Management -->
            <a id="iconTimeManagement" href="@Url.Action("Index", "TimeManagement")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "TimeManagement" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- User Management -->
            <a id="iconUserManagement" href="@Url.Action("Index", "UserManagement")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "UserManagement" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- Employee Management -->
            <a id="iconEmployeeManagement" href="@Url.Action("Index", "Employee")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Employee" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- Schedule Management -->
            <a id="iconScheduleManagement" href="@Url.Action("Index", "Schedule")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Schedule" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- Branch Management -->
            <a id="iconBranchManagement" href="@Url.Action("Index", "Branch")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Branch" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- Reports -->
            <a id="iconReports" href="@Url.Action("Index", "Reports")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Reports" ? "active" : "")">
                <span class="link-content"></span>
            </a>

            <!-- System -->
            <a id="iconSystem" href="@Url.Action("Index", "System")"
               class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "System" ? "active" : "")">
                <span class="link-content"></span>
            </a>
        </div>

        <a id="iconLogout" href="@Url.Action("Logout", "UserManagement")" class="nav-link logout-link"><span class="link-content"></span></a>
    </div>

    <div id="mainContent" class="main-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/CustomScripts/LayoutScript.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>