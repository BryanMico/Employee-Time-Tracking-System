<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Styles/NavbarStyle.css" />
    <link rel="stylesheet" href="~/Content/Styles/SidebarStyle.css" />

</head>
<body>
    <div class="custom-navbar">
        <a href="@Url.Action("Index", "Home")" class="brand">ETTS</a>
    </div>

    <div id="sidebar" class="sidebar">
        <button id="sidebarToggle">← Hide</button>

        <div class="sidebar-links">
            <a href="@Url.Action("Index", "Home")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">Home</a>
            <a href="@Url.Action("About", "Home")" class="@(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")">About This</a>
            <a href="@Url.Action("Contact", "Home")" class="@(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")">Contact Us</a>
            <a href="@Url.Action("SelectBranch", "Branch")">Select Branch</a>
        </div>

        <a href="@Url.Action("Logout", "Account")" class="logout-link">Logout</a>
    </div>

    <div id="mainContent" class="main-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        $(document).ready(function () {
            $('#sidebarToggle').click(function () {
                $('#sidebar').toggleClass('collapsed');
                $('#mainContent').toggleClass('expanded');

                if ($('#sidebar').hasClass('collapsed')) {
                    $('#sidebarToggle').text('Open →');
                } else {
                    $('#sidebarToggle').text('← Hide');
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>